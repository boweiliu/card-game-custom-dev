{
  "name": "card-game-simulator",
  "version": "1.0.0",
  "description": "A card game/sticky note simulator",
  "main": "src/server/index.ts",
  "scripts": {
    "dev": "concurrently \"PORT=${BE_PORT:-${PORT:-4321}0} npm run dev:be\" \"BE_PORT=${BE_PORT:-${PORT:-4321}0} PORT=${PORT:-4321} npm run dev:fe\"",
    "dev:be": "PORT=${PORT:-3000} ts-node-dev --respawn --transpile-only src/server/index.ts",
    "dev:fe": "webpack-dev-server --config webpack.config.js --mode development --port ${PORT:-9000}",
    "build": "tsc",
    "prod:be": "PORT=${PORT:-3000} node dist/server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jquery": "^3.5.21",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  },
  "engines": {
    "node": "20.19.2",
    "npm": "10.8.2"
  }
}
