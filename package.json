{
  "name": "card-game-simulator",
  "version": "1.0.0",
  "description": "A card game/sticky note simulator",
  "main": "src/server/index.ts",
  "scripts": {
    "dev": "concurrently \"FE_PORT=${PORT:-4321} PORT=${BE_PORT:-${PORT:-4321}0} npm run dev:be\" \"BE_PORT=${BE_PORT:-${PORT:-4321}0} PORT=${PORT:-4321} npm run dev:fe\" \"npm run proxy\"",
    "dev:be": "NODE_ENV=development PORT=${PORT:-3000} ts-node-dev --respawn --transpile-only src/server/index.ts",
    "dev:fe": "NODE_ENV=development webpack-dev-server --config webpack.config.js --mode development --port ${PORT:-9000}",
    "build": "npm run build:fe && npm run build:be",
    "build:be": "tsc",
    "build:fe": "NODE_ENV=production webpack --config webpack.config.js --mode production",
    "prod:fe": "NODE_ENV=production PORT=${PORT:-9001} serve dist/frontend",
    "prod:be": "NODE_ENV=production PORT=${PORT:-3001} node dist/server/index.js",
    "prod": "npm run clean && npm run build && npm run prod:be && npm run prod:fe",
    "clean": "rm -rf dist",
    "proxy": "caddy run --config Caddyfile",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "npm run format",
    "format": "npm run format:fix && npm run lint:eslint && npm run lint:css",
    "format:fix": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:eslint": "eslint . --ext .js,.ts,.tsx",
    "lint:css": "stylelint '**/*.less' '**/*.css' --fix"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "less": "^4.1.2",
    "less-loader": "^11.1.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jquery": "^3.5.21",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "css-loader": "^7.1.2",
    "eslint": "^8.0.0",
    "eslint-plugin-css-modules": "^2.0.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.2",
    "prettier": "^3.5.3",
    "serve": "^14.2.4",
    "style-loader": "^3.3.1",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-less": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  },
  "engines": {
    "node": "20.19.2",
    "npm": "11.4.1"
  }
}
